#!/usr/bin/env bash

set -o errexit

main() {
    "__runtests_${1:-lint}"
}

__runtests_help() {
    echo 'Usage: runtests <lint|integration>'
}

__runtests_lint() {
    echo 'Running shfmt'
    shfmt -i 4 -w .
}

__runtests_integration() {
    echo 'Running bats'
    bats -t "$(git rev-parse --show-toplevel)/jdk_switcher.bats"
}

main "$@"
